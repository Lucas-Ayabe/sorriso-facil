{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["pages/*"],
      "@config/*": ["config/*"],
      "@modules": ["app/modules/index.ts"],
      "@modules/*": ["app/modules/*"],
      "@components": ["app/modules/ui/components/index.ts"],
      "@components/*": ["app/modules/ui/components/*"],
      "@types": ["app/types/index.ts"],
      "@types/*": ["app/types/*"],
      "@hooks": ["app/hooks/index.ts"],
      "@hooks/*": ["app/hooks/*"],
      "@": ["app/index.ts"],
      "@/*": ["app/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
